<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- Styles for Multiplayer Buttons -->
    <style name="MultiplayerButtonStyle">
        <item name="android:textColor">@color/primary_text_inverse</item>
        <item name="android:textSize">24sp</item>
        <item name="pb_colorComplete">@color/button_background_complete</item>
        <item name="pb_colorProgress">@color/button_background_progress</item>
        <item name="pb_textProgress">@string/button_claim_set</item>
        <item name="pb_colorError">@color/button_background_error</item>
    </style>

    <!-- Styles for Menu Buttons -->
    <style name="FlatButtonStyle">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Dialog style for pause menu -->
    <style name="PauseDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog">
    </style>

    <!-- Game UI Styles -->
    <style name="GameUiHeader">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="GameUiText">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TutorialActivity">
        <item name="android:background">@color/fbutton_color_peter_river</item>
    </style>

</resources>
